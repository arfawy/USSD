<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="km.arfawy.android.ussd.activity.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_cts"
        android:id="@+id/btn_browse"
        android:layout_alignBottom="@+id/edit_num"
        android:layout_toEndOf="@+id/edit_num" />

    <Button
        android:text="@string/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/edit_num"
        android:maxLength="10"
        android:hint="@string/number_here"
        android:textAlignment="center"
        android:layout_marginBottom="34dp"
        android:layout_width="150dp"
        android:layout_above="@+id/btn_send"
        android:layout_alignEnd="@+id/btn_send" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:textAlignment="viewEnd"
        android:layout_above="@+id/btn_browse"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/edit_num"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:maxLength="16"
        android:id="@+id/edit_code"
        android:hint="@string/hint_code" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/logo_arfawy"
        android:id="@+id/imageView2"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/btn_send"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/logo_inwi"
        android:id="@+id/image_inwi"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/edit_code" />

</RelativeLayout>
